<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jboss.fuse.examples</groupId>
    <artifactId>apiprovider-poc</artifactId>
    <version>1.0.0-SNAPSHOT</version>
  </parent>

  <artifactId>financialStatementAPI</artifactId>

  <packaging>bundle</packaging>

  <name>API Provider :: Financial Statement Service :: API</name>
  <description>JAXWS artifacts for the Financial Statement Service.</description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-codegen-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>wsdl2java</goal>
            </goals>
            <configuration>
              <defaultOptions>
                <bindingFiles>
                  <bindingFile>src/main/wsdl/global-bindings.xjb</bindingFile>
                </bindingFiles>
                <noAddressBinding>true</noAddressBinding>
              </defaultOptions>
              <wsdlOptions>
                <wsdlOption>
                  <wsdl>${basedir}/src/main/wsdl/VFD_FS_POC.wsdl</wsdl>
                  <packagenames>
                    <packagename>http://www.w3.org/2001/XMLSchema=com.standardandpoors.integration.serviceschema.services.findata.v1</packagename>
                  </packagenames>
                </wsdlOption>
              </wsdlOptions>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
      </plugin>
    </plugins>
  </build>

</project>
